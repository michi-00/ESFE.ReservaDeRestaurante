<Window x:Class="ESFE.Restaurante.UI.CRUDCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFE.Restaurante.UI"
        mc:Ignorable="d"
        Title="CRUDCliente" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblID" Content="ID" HorizontalAlignment="Left" Height="26" Margin="113,34,0,0" VerticalAlignment="Top" Width="40"/>
        <Label x:Name="lblNombre" Content="Ingrese el nombre del cliente " HorizontalAlignment="Left" Height="26" Margin="177,34,0,0" VerticalAlignment="Top" Width="169"/>
        <Label x:Name="lblDireccion" Content="Ingrese la dirección  " HorizontalAlignment="Left" Height="26" Margin="375,34,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblTelefono" Content="Ingrese el número de teléfono" HorizontalAlignment="Left" Height="26" Margin="534,34,0,0" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="20" Margin="113,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="20" Margin="177,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169"/>
        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="20" Margin="375,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133"/>
        <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Height="20" Margin="534,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
        <Button x:Name="btnGuardar" Content="GUARDAR" HorizontalAlignment="Left" Height="31" Margin="187,159,0,0" VerticalAlignment="Top" Width="109"/>
        <Button x:Name="txtEliminar" Content="ELIMINAR" HorizontalAlignment="Left" Height="31" Margin="364,159,0,0" VerticalAlignment="Top" Width="105"/>
        <Button x:Name="txtModificar" Content="MODIFICAR" HorizontalAlignment="Left" Height="31" Margin="510,159,0,0" VerticalAlignment="Top" Width="110"/>
        <DataGrid x:Name="dgvMostrar" HorizontalAlignment="Center" Height="181" Margin="0,217,0,0" VerticalAlignment="Top" Width="722" d:ItemsSource="{d:SampleData ItemCount=5}"/>


    </Grid>
</Window>
